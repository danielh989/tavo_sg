@import '_mixins'

body
	padding: 0
	margin: 0
	background: #F2F2F2

.navbar 
.navbar-inverse
	margin-bottom: 0
	border-radius: 0px
	border: 0px
	background: #F2F2F2
	padding: 0 40px
	a
		text-transform: uppercase

.navbar-inverse 
.navbar-nav>li>a
	color: #828282 !important
	font-weight: 400
	font-size: 16px

.table-container
	padding: 20px
	background: #F2F2F2
	clearfix()
	
	.table-unit
		float: left
		cursor: pointer
		margin: 1%
		width: 23%
		height: 250px
		background: #DDD
		text-align: center
		-webkit-transition: border-bottom 0.25s
		.number-wrapper
			position: relative
		.number
			position: absolute
			top: 50%
			left: 50%
			margin-left: -50.5px
			font-size: 180px
			color: #ABB7B7
		&:hover
			background: #CF000F
			.number
				color: #F2F2F2
				text-decoration: none
				border-bottom: 5px solid #F2F2F2
	
	.table-add
		-webkit-box-shadow: inset 0 0 25px rgba(0,0,0,0.15)
		
		.open
			position: relative
			background: #00B16A
			color: #F4F4F4
			padding: 5px 12px
			text-align: center
			text-transform: uppercase
	
	.order-modal
		.modal-title
			text-transform: uppercase
		.modal-content
			border-radius: 0px
			background #F4F4F4
		.modal-footer
			text-align: center
			
	.mesa-libre
		float: left
		.number
			width: 100px
			height: 100px
			background: #DDD
			padding: 20px
			margin-left: 5px
			color: #ABB7B7