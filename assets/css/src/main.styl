@import '_mixins'

body
	padding: 0
	margin: 0
	background: #F2F2F2

.navbar 
.navbar-inverse
	margin-bottom: 0
	border-radius: 0px
	border: 0px
	background: #F2F2F2
	padding: 0 40px
	a
		text-transform: uppercase

.navbar-inverse 
.navbar-nav>li>a
	color: #828282 !important
	font-weight: 400
	font-size: 16px

.table-container
	padding: 20px
	background: #F2F2F2
	clearfix()
	
	.table-unit
		float: left
		cursor: pointer
		margin: 1%
		width: 23%
		height: 250px
		background: #DDD
		text-align: center
		-webkit-transition: border-bottom 0.25s
		.number-wrapper
			position: relative
		.number
			position: absolute
			top: 50%
			left: 50%
			margin-left: -50.5px
			font-size: 180px
			color: #ABB7B7
		&:hover
			background: #CF000F
			.number
				color: #F2F2F2
				text-decoration: none
				border-bottom: 5px solid #F2F2F2
	
	.table-add
		-webkit-box-shadow: inset 0 0 25px rgba(0,0,0,0.15)
		
		.open
			position: relative
			background: #00B16A
			color: #F4F4F4
			padding: 5px 12px
			text-align: center
			text-transform: uppercase
	
	.order-modal
		.modal-header
			.close
				opacity: 0.7
				border-radius: 4px
			span
				background: red
				padding: 2px 5px 4px 5px
				color: white
				height: 10px
				width: 10px
		.modal-title
			text-transform: uppercase
		.modal-content
			border-radius: 0px
			background #F4F4F4
		.modal-footer
			text-align: center
		.modal-body
			clearfix()
	
	.btn-wrapper
		display: block
		margin: 0 0 45px 0
		.btn-atras
			position: relative;
			display:block;
			text-decoration: none;
			cursor:pointer;
			background-color: #ddd;
			color: #333
			
			.arrow-inner
				display: block
				position: absolute
				top: 1px
				left: 3px
				z-index: 10
				margin-left: -15px
				width: 0
				height: 0
				border: 14px solid transparent
				border-right-color: #ddd
			
			.arrow
				display: block
				float: left
				margin-left: -15px
				width: 0
				height: 0
				border:  15px solid transparent
				border-right-color: #e8e8e8
			
			.button
				display: block
				float: left
				line-height: 20px
				background-color: #ddd
				border: 2px solid #eaeaea
				border-left: 0
				padding: 3px 9px 3px 3px
				text-align: center
				-webkit-border-radius: 0 2px 2px 0
				-moz-border-radius: 0 2px 2px 0
				border-radius: 0 2px 2px 0

			
	.mesa-libre
		float: left
		width: 23%
		height: 130px
		margin: 5.5px
		background: #DDD
		.number
			width: 100%
			padding: 20px
			color: #ABB7B7
	
	.categoria
		float: left
		position: relative
		width: 23%
		height: 130px
		margin: 5.5px
		background: #DDD
		.number
			position: absolute
			top: 50%
			margin-top: -27.5px
			width: 100%
			padding: 20px
			font-size: 14px
			color: #222
	
	.producto
		position: relative
		text-decoration: none
		color: #222
		width: 100%
		.number-wrapper
			clearfix()
			background: #DDD
			padding: 10px 13px
			border-radius: 3.4px
			-webkit-box-shadow: 0 0 5px rgba(0,0,0,0.35)
			margin: 10px 0
		.number
			position: absolute
			top: 64.5%
			margin-top: -17px
			display: inline-block
			font-size: 16px
			color: #222
			height: 34px
		.btn-group
			float: right
		.cantidad
			position: absolute
			right: 120px
			background: white
			border-radius: 4px
			-webkit-box-shadow: inset 0 0 2px rgba(0,0,0,0.85)
			padding: 2px 5px

.pedido-container
	position: relative
	width: 960px
	margin: 0 auto
	margin-top: 20px
	background: white
	box-shadow(0,0,3px,rgba(0,0,0,0.35))
	border-radius: 4px
	padding: 20px
	clearfix()
	
	hr
		margin-top: 15px
	
	.btn-wrapper
		display: inline-block
	
	.numero-mesa
		display: inline-block
		margin: 0
		margin-top: 5px
		padding: 0
	
	.total-pedido
		float: right
		font-size: 3em
		font-weight: 100
		letter-spacing: 1.3px
		margin-top: -5px
		span
			font-size: 0.5em
			margin-bottom: 15px
			vertical-align: top
	
	.detalle-pedido
		clearfix();
		.pagar
			margin: 0px
			padding: 0px
		.producto
			padding: 5px 20px
			background: #DDD
			color: #333
			text-transform: none
			border-radius: 4px
			box-shadow(0,0,3px,rgba(0,0,0,0.4))
			margin-bottom: 10px
			clearfix()
			.detalles
				display: inline-block
				margin-right: 20px
			.acciones
				float: right
				margin-top: 14.5px
			.btn-warning
				background: rgba(#f0ad4e, 0.45)
			.btn-danger
				background: rgba(#c9302c, 0.45)