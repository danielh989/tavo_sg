@import '_mixins'

body
	padding: 0
	margin: 0
	background: #F2F2F2

.navbar 
.navbar-inverse
	margin-bottom: 0
	border-radius: 0px
	border: 0px
	background: #F2F2F2
	padding: 0 40px
	a
		text-transform: uppercase

.navbar-inverse 
.navbar-nav>li>a
	color: #828282 !important
	font-weight: 400
	font-size: 16px

.table-container
	padding: 20px
	background: #F2F2F2
	clearfix()
	
	.table-unit
		float: left
		cursor: pointer
		margin: 1%
		width: 23%
		height: 250px
		background: #DDD
		text-align: center
		-webkit-transition: border-bottom 0.25s
		.number-wrapper
			position: relative
		.number
			position: absolute
			top: 50%
			left: 50%
			margin-left: -50.5px
			font-size: 180px
			color: #ABB7B7
		&:hover
			background: #CF000F
			.number
				color: #F2F2F2
				text-decoration: none
				border-bottom: 5px solid #F2F2F2
	
	.table-add
		-webkit-box-shadow: inset 0 0 25px rgba(0,0,0,0.15)
		
		.open
			position: relative
			background: #00B16A
			color: #F4F4F4
			padding: 5px 12px
			text-align: center
			text-transform: uppercase
	
	.order-modal
		.modal-title
			text-transform: uppercase
		.modal-content
			border-radius: 0px
			background #F4F4F4
		.modal-footer
			text-align: center
		.modal-body
			clearfix()
			
	.mesa-libre
		float: left
		width: 23%
		height: 130px
		margin: 5.5px
		background: #DDD
		.number
			width: 100%
			padding: 20px
			color: #ABB7B7
	
	.categoria
		float: left
		position: relative
		width: 23%
		height: 130px
		margin: 5.5px
		background: #DDD
		.number
			position: absolute
			top: 50%
			margin-top: -27.5px
			width: 100%
			padding: 20px
			font-size: 14px
			color: #222
	
	.producto
		position: relative
		text-decoration: none
		color: #222
		width: 100%
		.number-wrapper
			clearfix()
			background: #DDD
			padding: 10px 13px
			border-radius: 3.4px
			-webkit-box-shadow: 0 0 5px rgba(0,0,0,0.35)
			margin: 10px 0
		.number
			position: absolute
			top: 64.5%
			margin-top: -17px
			display: inline-block
			font-size: 16px
			color: #222
			height: 34px
		.btn-group
			float: right